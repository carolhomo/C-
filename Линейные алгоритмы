#include <iostream>

#include <math.h>

using namespace std;

int main()

{

    setlocale(LC_ALL,"rus");

    
int x,f;

    cout << "Введите значение x: ";

    cin >> x;

    f = x*x+3*x-100;

    cout << "f(x): " << f << endl;
    


    return 0;

}



10)

#include <iostream>

using namespace std;

int main()

{

   char surname[12];

   char firstname[12];

   char middlename[12];

   char gruppname;

   int number;

   cout << "Введите свое имя: ";

   cin >> surname;

   cout << "Введите свою фамилию: ";

   cin >> firstname;

   cout << "Введите свое отчество: ";

   cin >> middlename;

   cout << "Введите название группы: ";

   cin >> gruppname;

   cout << "Введите номер группы: ";

   cin >> number;

   
cout << surname << firstname << middlename << gruppname << number;


   
return 0;

 
}
